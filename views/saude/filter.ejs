    <div class="container">
        <div class="table-container">
            <table id="candidatesTable">
                <thead>
                    <tr>
                        <th>N° Inscrição</th>
                        <th>Função</th>
                        <th>Candidato</th>
                        <th>Idade</th>
                        <th>Nota</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (!filterUser || filterUser.length===0) { %>
                        <tr>
                            <td colspan="5">Nenhum dado encontrado</td>
                        </tr>
                        <% } else { %>
                            <% filterUser.forEach(element=> { %>
                                <tr>
                                    <td>
                                        <%= element.protocol %>
                                    </td>
                                    <td>
                                        <%= element.position %>
                                    </td>
                                    <td>
                                        <%= element.name %>
                                    </td>
                                    <td>
                                        <%= element.ageinyears %>
                                    </td>
                                    <td>
                                        <%= element.notice %>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } %>
                </tbody>
            </table>
            <button id="downloadWord" class="btn">Gerar Relatório em Word</button>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
    $('#candidatesTable').DataTable({
        columnDefs: [
            {
                targets: [3, 4], // 'Idade' = índice 3, 'Nota' = índice 4
                type: 'num'
            }
        ],
        order: [], // Habilita ordenação mas sem ordenar por padrão
        lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Todos"]],
        language: {
            url: "https://cdn.datatables.net/plug-ins/1.12.1/i18n/pt-BR.json"
        }
    });


            document.getElementById("downloadWord").addEventListener("click", async () => {
                if (!window.docx) {
                    alert("Biblioteca docx não carregada. Tente novamente.");
                    return;
                }

                const { Document, Packer, Paragraph, Table, TableRow, TableCell, TextRun } = window.docx;

                // Pega os dados da tabela HTML
                const tableElement = document.getElementById("candidatesTable");
                const rows = tableElement.querySelectorAll("tr");

                const wordTableRows = [];

                rows.forEach((row, index) => {
                    const cells = row.querySelectorAll("th, td");
                    const wordCells = [];

                    cells.forEach(cell => {
                        wordCells.push(
                            new TableCell({
                                children: [new Paragraph(cell.textContent.trim())],
                            })
                        );
                    });

                    wordTableRows.push(
                        new TableRow({
                            children: wordCells,
                        })
                    );
                });

                const wordTable = new Table({
                    rows: wordTableRows,
                    width: {
                        size: 100,
                        type: "pct",
                    },
                });

                const doc = new Document({
                    sections: [
                        {
                            children: [
                                new Paragraph({
                                    children: [new TextRun("Relatório de Candidatos")],
                                    heading: "Heading1",
                                }),
                                wordTable,
                            ],
                        },
                    ],
                });

                const blob = await Packer.toBlob(doc);
                const url = URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = "relatorio.docx";
                a.click();
                URL.revokeObjectURL(url);
            });
        });
    </script>

</body>

</html>
