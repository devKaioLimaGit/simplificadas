            <option value="0000 CIRURGIÃO-DENTISTA - 24H">0000 CIRURGIÃO-DENTISTA - 24H</option>
            <option value="0000 CONDUTOR SOCORRISTA - 12X36">0000 CONDUTOR SOCORRISTA - 12X36</option>
            <option value="0000 CUIDADOR 12X36">0000 CUIDADOR 12X36</option>
            <option value="1075 DERMATOLOGISTA 20H">1075 DERMATOLOGISTA 20H</option>
