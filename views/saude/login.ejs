<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--ICON-->
    <link rel="icon" href="/images/favoicon.png" type="image/x-icon" />
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<style>
    /* Definindo as fontes e estilo global */
body {
    font-family: 'Poppins', sans-serif;
    background-color: #f0f2f5;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

a{
    text-decoration: none;
    margin: 20px 0px;
}

/* Container do modelo de login */
.container-model {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
}

/* Estilo do modelo de login */
.model {
    background-color: white;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    padding: 40px;
    border-radius: 10px;
    width: 100%;
    max-width: 400px;
    text-align: center;
}

/* Título do modelo */
h1 {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #333;
}

/* Subtítulo */
h2 {
    font-size: 18px;
    margin-bottom: 30px;
    color: #555;
}

/* Estilo dos campos de input */
.form-group {
    margin-bottom: 20px;
    text-align: left;
}

label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #333;
    margin-bottom: 8px;
}

input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    color: #333;
    transition: border-color 0.3s ease-in-out;
}

input:focus {
    border-color: #4e73df;
    outline: none;
}

/* Estilo do botão */
.form-actions {
    margin-top: 20px;
}

.btn {
    background-color: #4e73df;
    color: white;
    padding: 12px 20px;
    font-size: 16px;
    margin-bottom: 20px;
    font-weight: 600;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
    transition: background-color 0.3s ease;
}

.btn:hover {
    background-color: #375a8c;
}

/* Responsividade */
@media (max-width: 600px) {
    .model {
        padding: 30px;
    }

    h1 {
        font-size: 28px;
    }

    h2 {
        font-size: 16px;
    }
}


</style>
<body>
    <div class="container-model">
        <div class="model">
            <h1>Login</h1>
            <h2>Bem-vindo de volta!</h2>
            <form action="https://simplificada.saude.paulista.pe.gov.br/authenticate" method="POST">
                <div class="form-group">
                    <label for="username">Usuário</label>
                    <input type="text" id="username" name="username" placeholder="Digite seu login" required>
                </div>

                <div class="form-group">
                    <label for="name">Senha</label>
                    <input type="password" id="password" name="password" placeholder="Digite senha" required>
                </div>
                
                <!-- <input type="hidden" name="recaptchaToken" id="recaptchaToken"> -->

                <div class="form-actions">
                    <button type="submit" class="btn">Entrar</button>
                </div>

                <a href="/reset/password">Recupera minha senha</a>
            </form>
        </div>
    </div>
</body>

<script>
    document.addEventListener("keydown", function (event) {
  // Detectando F12
  if (event.keyCode === 123) {
    event.preventDefault();
    return
  }

  // Detectando Ctrl + Shift + I
  if (event.ctrlKey && event.shiftKey && event.keyCode === 73) {
    event.preventDefault();
    return
  }

  // Detectando Ctrl + Shift + J
  if (event.ctrlKey && event.shiftKey && event.keyCode === 74) {
    event.preventDefault();
    return
  }
});

document.addEventListener("contextmenu", function (event) {
  event.preventDefault();  // Impede o menu de contexto padrão
  return
});
</script>

</html>
