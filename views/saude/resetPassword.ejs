<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/favoicon.png" type="image/x-icon" />
  <title>Reset de Senha</title>
  <style>
    /* Importa uma fonte moderna */
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

    /* Estilos gerais */
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #007bff, #6610f2);
      color: #fff;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    /* Container */
    .container {
      width: 100%;
      max-width: 800px;
      text-align: center;
    }

    /* Card */
    .card {
      background-color: #007bff;
      backdrop-filter: blur(10px);
      border-radius: 12px;
      padding: 40px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
      animation: fadeIn 0.5s ease-in-out;
    }

    /* Logo */
    .card-header img {
      border-radius: 10px;
    }

    /* Formulário */
    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    label {
      font-weight: bold;
      font-size: 16px;
    }

    input {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      background: rgba(255, 255, 255, 0.3);
      color: #fff;
      outline: none;
      transition: 0.3s;
    }

    input::placeholder {
      color: #ddd;
    }

    input:focus {
      background: rgba(255, 255, 255, 0.5);
      border: 1px solid #fff;
    }

    /* Botões */
    button,
    a.btn-primary {
      background: #28a745;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      text-align: center;
      cursor: pointer;
      width: 100%;
      text-decoration: none;
      transition: 0.3s;
    }

    button:hover,
    a.btn-primary:hover {
      background: #218838;
    }

    /* Alerta */
    .alert {
      padding: 10px;
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.2);
      font-size: 14px;
    }

    /* Layout dos botões */
    div[style*="display: flex"] {
      width: 100%;
      gap: 10px;
      justify-content: center;
    }

    div[style*="display: flex"] button,
    div[style*="display: flex"] a {
      flex: 1;
    }

    /* Animação */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header" style="display: flex; flex-direction: column; align-items: center">
        <img src="/images/logoprefeitura.png" alt="" width="40%" height="40%" />
      </div>
      <div class="card-body">
        <% if (typeof message !=='undefined' ) { %>
          <div class="alert alert-info" style="margin: 20px 0px ;">
            <%= message %>
          </div>
          <% } %>
            <form action="/reset-password" method="post">
              <input style="margin: 10px 0px" class="form-control" type="text" name="identifier"
                placeholder="Digite seu nome de usuário..." required />
              <br />
              <div style="display: flex; gap: 20px">
                <button style="width: 50%" type="submit" class="btn btn-primary">
                  Solicitar Redefinição de Senha
                </button>
                <a href="/login" style="width: 50%" class="btn btn-primary">Voltar</a>
              </div>
            </form>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("keydown", function (event) {
      // Detectando F12
      if (event.keyCode === 123) {
        event.preventDefault();
        return
      }

      // Detectando Ctrl + Shift + I
      if (event.ctrlKey && event.shiftKey && event.keyCode === 73) {
        event.preventDefault();
        return
      }

      // Detectando Ctrl + Shift + J
      if (event.ctrlKey && event.shiftKey && event.keyCode === 74) {
        event.preventDefault();
        return
      }
    });

    document.addEventListener("contextmenu", function (event) {
      event.preventDefault();  // Impede o menu de contexto padrão
      return
    });
  </script>
</body>

</html>