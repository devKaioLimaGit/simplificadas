<script>
  // CPF Validation
  function validarCPF(input) {
    const cpf = input.value.replace(/[^\d]/g, '');
    const cpfErro = document.getElementById('cpfErro');
    if (cpf.length !== 11 || !isValidCPF(cpf)) {
      cpfErro.style.display = 'block';
      input.setCustomValidity('CPF inv√°lido');
    } else {
      cpfErro.style.display = 'none';
      input.setCustomValidity('');
    }
  }

  function isValidCPF(cpf) {
    let sum = 0, rest;
    if (cpf === "00000000000") return false;
    for (let i = 1; i <= 9; i++) sum += parseInt(cpf.substring(i - 1, i)) * (11 - i);
    rest = (sum * 10) % 11;
    if (rest === 10 || rest === 11) rest = 0;
    if (rest !== parseInt(cpf.substring(9, 10))) return false;
    sum = 0;
    for (let i = 1; i <= 10; i++) sum += parseInt(cpf.substring(i - 1, i)) * (12 - i);
    rest = (sum * 10) % 11;
    if (rest === 10 || rest === 11) rest = 0;
    if (rest !== parseInt(cpf.substring(10, 11))) return false;
    return true;
  }

  // File Validation (PDF only, max 10MB)
  function checkFile() {
    const fileInput = document.getElementById('file');
    const fileError = document.getElementById('fileError');
    const file = fileInput.files[0];
    
    fileError.style.display = 'none';
    fileError.textContent = '';

    if (file) {
      const fileType = file.type;
      const fileSize = file.size;

      if (fileType !== 'application/pdf') {
        fileError.textContent = 'Apenas arquivos PDF s√£o permitidos.';
        fileError.style.display = 'block';
        fileInput.value = '';
        return;
      }

      if (fileSize > 10 * 1024 * 1024) {
        fileError.textContent = 'O arquivo deve ter no m√°ximo 10MB.';
        fileError.style.display = 'block';
        fileInput.value = '';
        return;
      }
    }
  }

  // Show/Hide Deficiency Details
  document.getElementById('deficiency').addEventListener('change', function () {
    document.getElementById('deficiencyDetails').style.display = this.value === 'SIM' ? 'block' : 'none';
  });

