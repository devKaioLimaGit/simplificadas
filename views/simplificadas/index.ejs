    <script>
        // Dados simulados para hist√≥ricos
        const dadosHistoricoSaude = [
            "‚úÖ Inscri√ß√£o Aprovada - Processo 123",
            "‚è≥ Inscri√ß√£o Pendente - Processo 124",
            "‚ùå Inscri√ß√£o Rejeitada - Processo 125",
            "‚úÖ Inscri√ß√£o Aprovada - Processo 126"
        ];

        const dadosHistoricoSema = [
            "‚úÖ Inscri√ß√£o Aprovada - Processo 223",
            "‚è≥ Inscri√ß√£o Pendente - Processo 224",
            "‚è≥ Inscri√ß√£o Pendente - Processo 225",
            "‚ùå Inscri√ß√£o Rejeitada - Processo 226"
        ];

        // Status dos processos
        const statusProcessos = {
            saude: { emoji: "üü¢", texto: "Aberto" },
            sema: { emoji: "üü°", texto: "Em Andamento" }
        };

        // Elementos
        const containerCards = document.getElementById('container-cards');
        const conteudoSaude = document.getElementById('conteudo-saude');
        const historicoSaude = document.getElementById('historico-saude');
        const conteudoSema = document.getElementById('conteudo-sema');
        const historicoSema = document.getElementById('historico-sema');

        // Fun√ß√£o para preencher hist√≥rico
        function preencherHistorico(listaElement, dados) {
            listaElement.innerHTML = '';
            dados.forEach(item => {
                const li = document.createElement('li');
                li.textContent = item;
                listaElement.appendChild(li);
            });
        }

        // Fun√ß√£o para atualizar status
        function atualizarStatusCardsPrincipais() {
            const statusMap = {
                "Aberto": "status-aberto",
                "Em Andamento": "status-andamento",
                "Encerrado": "status-encerrado"
            };

            const cardSaude = document.querySelector('.card[data-conteudo="saude"]');
            const cardSema = document.querySelector('.card[data-conteudo="sema"]');
            const statusSaude = document.getElementById('status-processo-saude');
            const statusSema = document.getElementById('status-processo-sema');

            if (cardSaude) {
                const statusButton = cardSaude.querySelector('.status-button');
                statusButton.querySelector('.emoji-status').textContent = statusProcessos.saude.emoji;
                statusButton.querySelector('.texto-status').textContent = statusProcessos.saude.texto;
                statusButton.className = `status-button ${statusMap[statusProcessos.saude.texto] || ''}`;
            }

            if (cardSema) {
                const statusButton = cardSema.querySelector('.status-button');
                statusButton.querySelector('.emoji-status').textContent = statusProcessos.sema.emoji;
                statusButton.querySelector('.texto-status').textContent = statusProcessos.sema.texto;
                statusButton.className = `status-button ${statusMap[statusProcessos.sema.texto] || ''}`;
            }

            if (statusSaude) {
                statusSaude.querySelector('.emoji-status').textContent = statusProcessos.saude.emoji;
                statusSaude.querySelector('.texto-status').textContent = statusProcessos.saude.texto;
                statusSaude.className = `status-button ${statusMap[statusProcessos.saude.texto] || ''}`;
            }

            if (statusSema) {
                statusSema.querySelector('.emoji-status').textContent = statusProcessos.sema.emoji;
                statusSema.querySelector('.texto-status').textContent = statusProcessos.sema.texto;
                statusSema.className = `status-button ${statusMap[statusProcessos.sema.texto] || ''}`;
            }
        }

        // Bot√µes cards
        document.querySelectorAll('.btn-acessar').forEach(btn => {
            btn.addEventListener('click', () => {
                const conteudo = btn.dataset.conteudo;
                containerCards.classList.add('hidden');
                if (conteudo === 'saude') {
                    conteudoSaude.classList.remove('hidden');
                } else if (conteudo === 'sema') {
                    conteudoSema.classList.remove('hidden');
                }
            });
        });

        // Sa√∫de: Abrir hist√≥rico
        document.getElementById('btn-historico-saude').addEventListener('click', () => {
            preencherHistorico(document.getElementById('lista-historico-saude'), dadosHistoricoSaude);
            conteudoSaude.classList.add('hidden');
            historicoSaude.classList.remove('hidden');
        });

        // Sa√∫de: Voltar do hist√≥rico para menu
        document.getElementById('btn-voltar-historico-saude').addEventListener('click', () => {
            historicoSaude.classList.add('hidden');
            conteudoSaude.classList.remove('hidden');
        });

        // Sa√∫de: Voltar para tela inicial
        document.getElementById('btn-voltar-saude').addEventListener('click', () => {
            conteudoSaude.classList.add('hidden');
            containerCards.classList.remove('hidden');
        });

        // Sema: Abrir hist√≥rico
        document.getElementById('btn-historico-sema').addEventListener('click', () => {
            preencherHistorico(document.getElementById('lista-historico-sema'), dadosHistoricoSema);
            conteudoSema.classList.add('hidden');
            historicoSema.classList.remove('hidden');
        });

        // Sema: Voltar do hist√≥rico para menu
        document.getElementById('btn-voltar-historico-sema').addEventListener('click', () => {
            historicoSema.classList.add('hidden');
            conteudoSema.classList.remove('hidden');
        });

        // Sema: Voltar para tela inicial
        document.getElementById('btn-voltar-sema').addEventListener('click', () => {
            conteudoSema.classList.add('hidden');
            containerCards.classList.remove('hidden');
        });

        // Inicializar status
        atualizarStatusCardsPrincipais();
    </script>
